<Window x:Class="generateur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generer des challenges" Height="144" Width="350"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="exit" Content="Quitter" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="175" Height="30"/>
        <Button x:Name="generate" Content="Générer" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="175" Height="30" Click="generate_Click"/>
        <TextBox x:Name="nbrOfEntry" HorizontalAlignment="Left" Height="18" Margin="81,10,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="253" PreviewTextInput="NumberValidationTextBox"/>
        <Label x:Name="label_generate" Content="A générer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="71" Height="28" Margin="10,6,0,0"/>
        <Label x:Name="label_destination" Content="Destination" HorizontalAlignment="Left" Margin="6,42,0,0" VerticalAlignment="Top"/>
        <Button x:Name="find" Content="Parcourir" HorizontalAlignment="Left" Margin="81,45,0,0" VerticalAlignment="Top" Width="57" Click="button_Click"/>
        <TextBox x:Name="filePath" Text="?" HorizontalAlignment="Left" Margin="138,45,0,0" VerticalAlignment="Top" Width="196" Height="20"/>
    </Grid>

</Window>
